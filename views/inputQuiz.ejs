<div id="quiz-container">
  <div id="game-setup">
    <div>
      <label for="category">스테이지를 골라주세요:</label>
      <select id="category">
        <option value="" disabled selected hidden>스테이지 선택</option>
      </select>
    </div>
    <button id="start-btn">게임 시작</button>
  </div>
  <div id="quiz" style="display: none">
    <div id="progress"></div>
    <div id="currentScore"></div>
    <% if (user) { %>
    <div id="highScore"></div>
    <% } else {} %>
    <button id="hint-btn">?</button>
    <div id="hint"></div>
    <div id="question"></div>
    <div id="answers">
      <!-- <input
        id="inputText"
        type="text"
        placeholder="정답을 입력하세요"
        autocomplete="off"
      /> -->
      <!-- <button id="submit">확인</button> -->
    </div>
    <div id="result"></div>
  </div>
</div>
<div id="popup" style="display: none">
  <div id="popupHint">
    <p></p>
    <button id="hintCloseBtn">x</button>
  </div>
</div>

<script src="/questions/data.js"></script>
<script src="/js/inputQuiz.js"></script>
